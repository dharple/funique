{
    "name": "outsanity/funique",
    "description": "Finds files unique to one directory or another",
    "type": "package",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Doug Harple",
            "email": "dharple@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "symfony/console": "^5.1"
    },
    "require-dev": {
        "outsanity/phpcs": "*",
        "phpstan/phpstan": "^0.12.48",
        "phpunit/phpunit": "^9.4"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Outsanity\\Funique\\": "src/"
        }
    },
    "scripts": {
        "compile": "bin/compile",
        "phpcbf":  "phpcbf",
        "phpcs":   "phpcs",
        "phpstan": "phpstan analyse",
        "test":    "phpunit"
    }
}
