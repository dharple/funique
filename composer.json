{
    "name": "outsanity/funique",
    "description": "Finds files unique to one directory or another",
    "type": "package",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Doug Harple",
            "email": "dharple@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/console": "^5.4.17"
    },
    "require-dev": {
        "outsanity/phpcs": ">=0.4.0",
        "phpstan/phpstan": "^1.9.14",
        "phpunit/phpunit": "^9.5.28",
        "ramsey/uuid": "^4.7.3",
        "symfony/filesystem": "^5.4.13"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Outsanity\\Funique\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Outsanity\\Tests\\Funique\\": "tests/"
        }
    },
    "scripts": {
        "compile":  "bin/compile",
        "phpcbf":   "phpcbf",
        "phpcs":    "phpcs",
        "phpstan":  "phpstan analyse",
        "test":     "phpunit"
    }
}
